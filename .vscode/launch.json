{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}/src/",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Test Bench",
      "program": "UNFLoader",
      "args": ["-b", "-d", "-r", "${workspaceFolder}/src/test_bench.z64"],
      "preLaunchTask": "build",
      "console": "integratedTerminal"
    },

    {
      "cwd": "${workspaceFolder}/src/",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Test Bench (emu)",
      "program": "${env:N64_EMU}",
      "args": ["${workspaceFolder}/src/test_bench.z64"],
      "preLaunchTask": "build",
      "console": "integratedTerminal"
    },

    {
      "cwd": "${workspaceFolder}/src/",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Tests",
      "program": "UNFLoader",
      "args": [
        "-b",
        "-d",
        "-r",
        "${workspaceFolder}/libdragon/tests/testrom.z64"
      ],
      "preLaunchTask": "buildTests",
      "console": "integratedTerminal"
    },

    {
      "cwd": "${workspaceFolder}/libdragon/tests",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Tests (emu)",
      "program": "${env:N64_EMU}",
      "args": ["${workspaceFolder}/libdragon/tests/testrom_emu.z64"],
      "preLaunchTask": "buildTests",
      "console": "integratedTerminal"
    },

    {
      "cwd": "${fileDirname}",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Run selected example",
      "program": "UNFLoader",
      "args": [
        "-b",
        "-d",
        "-r",
        "${fileDirname}/${fileBasenameNoExtension}.z64"
      ],
      "preLaunchTask": "buildExamples",
      "console": "integratedTerminal"
    },

    {
      "cwd": "${workspaceFolder}/src/",
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Run selected example (emu)",
      "program": "${env:N64_EMU}",
      "args": ["${fileDirname}/${fileBasenameNoExtension}.z64"],
      "preLaunchTask": "buildTests",
      "console": "integratedTerminal"
    }
  ]
}
