{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "sourceMap": true,
    "listFiles": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["index.js", "modules/**/*"]
}