{
  "name": "libdragon",
  "version": "10.0.0",
  "description": "This is a docker wrapper for libdragon",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "bin": {
    "libdragon": "./index.js"
  },
  "scripts": {
    "libdragon": "node index.js",
    "start": "node index.js start",
    "stop": "node index.js stop",
    "pack": "pkg ./",
    "format": "prettier **/*.js --write",
    "format-check": "prettier **/*.js --check",
    "lint": "eslint --fix **/*.js",
    "lint-check": "eslint **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anacierdem/libdragon-docker.git"
  },
  "files": [
    "modules/**/*"
  ],
  "author": "Ali Naci Erdem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anacierdem/libdragon-docker/issues"
  },
  "homepage": "https://github.com/anacierdem/libdragon-docker#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "ed64": "^2.0.2",
    "eslint": "^7.32.0",
    "pkg": "^5.3.1",
    "prettier": "^2.4.0"
  },
  "pkg": {
    "targets": [
      "node14-win-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ],
    "assets": [
      "skeleton/**"
    ]
  }
}
