{
  "name": "libdragon",
  "version": "10.7.1",
  "description": "This is a docker wrapper for libdragon",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "bin": {
    "libdragon": "./index.js"
  },
  "scripts": {
    "libdragon": "node index.js",
    "start": "node index.js start",
    "stop": "node index.js stop",
    "pack": "pkg ./",
    "format": "prettier **/*.js --write",
    "format-check": "prettier **/*.js --check",
    "lint": "eslint --fix **/*.js",
    "lint-check": "eslint **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anacierdem/libdragon-docker.git"
  },
  "files": [
    "modules/**",
    "skeleton/**"
  ],
  "author": "Ali Naci Erdem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anacierdem/libdragon-docker/issues"
  },
  "homepage": "https://github.com/anacierdem/libdragon-docker#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "command-line-usage": "^6.1.1",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "ed64": "^2.0.4",
    "eslint": "^7.32.0",
    "pkg": "^5.5.2",
    "prettier": "^2.4.0",
    "semantic-release": "^19.0.2"
  },
  "pkg": {
    "targets": [
      "node14-win-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ],
    "assets": [
      "skeleton/**"
    ]
  },
  "release": {
    "dryRun": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
