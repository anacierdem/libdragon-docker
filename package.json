{
  "name": "libdragon",
  "version": "11.1.2",
  "description": "This is a docker wrapper for libdragon",
  "main": "index.js",
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "bin": {
    "libdragon": "./index.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "libdragon": "node index.js",
    "start": "node index.js start",
    "stop": "node index.js stop",
    "pack": "pkg ./",
    "format": "prettier **/*.js --write",
    "format-check": "prettier **/*.js --check",
    "lint": "eslint --fix **/*.js",
    "lint-check": "eslint **/*.js",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anacierdem/libdragon-docker.git"
  },
  "files": [
    "modules/**",
    "skeleton/**"
  ],
  "author": "Ali Naci Erdem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anacierdem/libdragon-docker/issues"
  },
  "homepage": "https://github.com/anacierdem/libdragon-docker#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "command-line-usage": "^6.1.1",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/command-line-usage": "^5.0.2",
    "@types/lodash": "^4.14.182",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "ed64": "^2.0.4",
    "eslint": "^7.32.0",
    "jest": "^29.5.0",
    "pkg": "^5.5.2",
    "prettier": "^2.4.0",
    "semantic-release": "^24.0.0",
    "typescript": "^4.7.4"
  },
  "pkg": {
    "targets": [
      "node14-win-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ],
    "assets": [
      "skeleton/**"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "powershell.exe ./pack.ps1 ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "libdragon-linux-x86_64.tar.gz",
              "label": "Linux executable"
            },
            {
              "path": "libdragon-macos-x86_64.tar.gz",
              "label": "MacOS executable"
            },
            {
              "path": "libdragon-win-x86_64.zip",
              "label": "Windows executable"
            },
            {
              "path": "Output/libdragon-installer.exe",
              "label": "Windows installer"
            }
          ]
        }
      ],
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
